#include <stdio.h>

int main()
{
    int A[2][2] = {{1,2},{3,4}}; // Matriz A
    int B[2][2] = {{5,6},{7,8}}; // Matriz B
    int i, j;
    int soma [2][2];
    
    // Somando as matrizes
    for(i = 0; i < 2; i++)
    {
        for(j = 0; j < 2; j++)
        {
            soma [i][j] = A[i][j] + B[i][j];
        }
    }
    
    for(i = 0; i < 2; i++)
    {
        for(j = 0; j < 2; j++)
        {
            printf("%d ", soma[i][j]);
        }
        printf("\n");
    }
    return 0;
}
