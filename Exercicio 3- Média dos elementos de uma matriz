#include <stdio.h>

int main()
{
    int matriz[2][2] = {{2,4},{6,8}}; // Declaração e inicialização
    int i, j, soma = 0; // variavel para somar elementos
    float media;
    
    for(i = 0; i < 2; i++)
    {
        for(j = 0; j < 2; j++)
        {
            soma += matriz[i][j]; // soma cada elemento
        }
    }
    
    media = soma / 4.0; // Calcula a média
    printf("Media: %.2f\n", media); // Mostra a média
    return 0;
}
