// Ler largura e altura de um retangulo
#include <stdio.h>

struct Produto
{
    int id; // codigo do produto
    char nome[30]; // Vetor 30
    float preco;
};

int main()
{
    struct Produto produtos[2];

    for (int i = 0; i < 2; i++)
    {
        printf("Produto %d:\n", i + 1);
        printf("ID: ");
        scanf("%d", &produtos[i].id);
        getchar(); // Limpa o buffer do teclado
        // buffer - pequena memoria
        printf("Nome: ");
        fgets(produtos[i].nome, sizeof(produtos[i].nome), stdin);

        printf("Preco: ");
        scanf("%f", &produtos[i].preco);
    }
    printf("\nLista de produtos:\n");
    for(int i = 0; i < 2; i++)
    {
        printf("Produto %d: %sPreÃ§o: R$%.2f\n", produtos[i].id, produtos[i].nome, produtos[i].preco);
    }

    return 0;
}
