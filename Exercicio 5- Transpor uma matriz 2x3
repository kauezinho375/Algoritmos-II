#include <stdio.h>

int main()
{
    int matriz[2][3] = {{1,2,3},{4,5,6}}; // Declaração
    int transposta[3][2]; // Matriz transposta
    int i, j;
    
    // Calculando a transposta
    for(i = 0; i < 2; i++)
    {
        for(j = 0; j < 3; j++)
        {
            transposta[j][i] = matriz[i][j];
        }
    }
    
    
    
    for(i = 0; i < 3; i++)
    {
        for(j = 0; j < 2; j++)
        {
            printf("%d ", transposta[i][j]); //troca linha
        }
        printf("\n");
    }
    return 0;
}
