#include <stdio.h>

int main()
{
    int matriz[2][2] = {{1,2},{3,4}}; // Declaração
    int i, j;
    
    // multiplicando por 2
    for(i = 0; i < 2; i++)
    {
        for(j = 0; j < 2; j++)
        {
            matriz[i][j] *= 2; // Cada elemento multiplicando 
        }
    }

    // Imprimindo a matriz resultante
    for(i = 0; i < 2; i++)
    {
        for(j = 0; j < 2; j++)
        {
           printf("%d ", matriz[i][j]);
        }
        printf("\n");
    }
    return 0;
}
