#include <stdio.h>
#include <locale.h>

int main()
{
    setlocale(LC_ALL,"Portuguese");
    int taml, tamc;
    printf("\nEntre com o numero de linhas da matriz = ");
    scanf("%d", &taml);
    printf("\nEntre com o numero de colunas da matriz = ");
    scanf("%d", &tamc);
    
    int matriz [taml][tamc], linha, coluna;
    for(linha=0; linha<taml; linha++)
        for(coluna=0; coluna<tamc; coluna++)
        {
            printf("\nEntre com o elemento[%d][%d]=",linha+1, coluna+1);
            scanf("%d", &matriz[linha][coluna]);
        }
    for(linha=0; linha<taml; linha++)
    {
        printf("\n |");
        for (coluna=0; coluna<tamc; coluna++)
            printf(" %d ", matriz[linha][coluna]);
        printf("|");
    }
    getchar();
    return 0;
}
